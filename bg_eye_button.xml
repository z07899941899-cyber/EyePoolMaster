<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:startColor="#7C4DFF"
                android:endColor="#311B92"
                android:angle="45"/>
            <stroke
                android:width="3dp"
                android:color="#FFFFFF"/>
            <size
                android:width="100dp"
                android:height="100dp"/>
        </shape>
    </item>
    
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#6200EA"
                android:endColor="#311B92"
                android:angle="45"/>
            <stroke
                android:width="2dp"
                android:color="#FFFFFF"/>
            <size
                android:width="100dp"
                android:height="100dp"/>
        </shape>
    </item>
</selector>